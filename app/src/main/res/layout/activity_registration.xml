<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd400"
    tools:context="comtamuka120.httpsgithub.final_project.registration">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/email_reg_editText"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/yellow_logo_description"
        app:srcCompat="@drawable/yellow_logo" />

    <EditText
        android:id="@+id/pass_reg_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_reg_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="#11000000"
        android:drawableStart="@drawable/ic_action_lock"
        android:ems="10"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:textColorHint="#000" />

    <EditText
        android:id="@+id/email_reg_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pass_reg_editText"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:drawableStart="@drawable/ic_action_email"
        android:ems="10"
        android:hint="@string/enter_email"
        android:inputType="textEmailAddress"
        android:textColorHint="#000" />

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass_reg_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:background="#ffd400"
        android:onClick="reg_btnClick"
        android:text="@string/register"
        android:textSize="30sp" />

</RelativeLayout>
