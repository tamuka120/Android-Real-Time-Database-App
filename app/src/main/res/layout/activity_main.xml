<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd400"
    tools:context="comtamuka120.httpsgithub.final_project.MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <EditText
        android:id="@+id/login_user_ediText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/pass_login_editText"
        android:layout_marginTop="258dp"
        android:background="#11000000"
        android:drawableStart="@drawable/ic_action_person"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:labelFor="@id/login_user_ediText"
        android:textColorHint="#000" />


    <EditText
        android:id="@+id/pass_login_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_user_ediText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="#11000000"
        android:drawableStart="@drawable/ic_action_lock"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:labelFor="@id/pass_login_editText"
        android:textColorHint="#000" />

    <ImageView
        android:id="@+id/logo_login"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/pass_login_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:contentDescription="@string/yellow_logo_description"
        app:srcCompat="@drawable/yellow_logo" />

    <Button
        android:id="@+id/reg_button_login"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="#ffd400"
        android:onClick="reg_button_loginClick"
        android:text="@string/register_account" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:layout_below="@+id/pass_login_editText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="47dp"
        android:background="#505050"
        android:onClick="login_buttonClick"
        android:text="@string/login" />


</RelativeLayout>

